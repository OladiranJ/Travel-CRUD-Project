<%- include("../partials/header.ejs")%>
    <div class="container col s2">
    <h1>Your trip to <%=city%></h1>
    <ul>
        <% for (let i = 0; i < trip.activity.length; i++) {%>
            <li><h5><%= trip.activity[i].activityName%>:</h5> <%= trip.activity[i].description%></li>
        <%}%>
    </ul>


    <div>
        <button class="stylebtn edit-btns"><a class="styletag" href="/auth/">Back to Homepage</a></button>
    </div>


    <form action="/trips/<%=trip._id%>?_method=DELETE" method="POST">
              <input class="stylebtn deletebtn edit-btns" type="submit" value="Delete Trip"/>
          </form>
</div>
